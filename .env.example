# ===================================================================
# SYNC ERP WOOCOMMERCE v2.0 - CONFIGURACIÓN
# ===================================================================

# ============ SERVIDOR ============
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# ============ CONFIGURACIÓN DE LA API ERP ============
ERP_ENDPOINT=https://api.tuempresa.com/farma/next/ecommerce/
ERP_TIMEOUT=30000
ERP_RETRY_ATTEMPTS=3

# ============ MYSQL WOOCOMMERCE ============
MYSQL_HOST=tu_servidor_mysql.com
MYSQL_PORT=3306
MYSQL_USER=tu_usuario_mysql
MYSQL_PASSWORD=tu_password_mysql
MYSQL_DATABASE=tu_base_datos_woocommerce
DB_PREFIX=wp_
MYSQL_CONNECT_TIMEOUT=60000
MYSQL_ACQUIRE_TIMEOUT=60000
MYSQL_TIMEOUT=60000

# ============ SISTEMA V2 - COLAS Y RETRY LOGIC ============
MAX_RETRY_ATTEMPTS=3
PROCESSING_TIMEOUT_MS=30000
ENABLE_TRANSACTIONS=true

# SQLite Queue Database (local)
SQLITE_DB_PATH=./data/sync_queue.db

# ============ NOTIFICACIONES WHATSAPP ============
WHATSAPP_ENABLED=true
WHATSAPP_NUMBER=+595981234567
WHATSAPP_RECIPIENT=595981234567

# Configuración de notificaciones
NOTIFY_ON_START=true
NOTIFY_ON_COMPLETE=true
NOTIFY_ON_ERROR=true
ERROR_THRESHOLD_PERCENT=10

# ============ REPORTES DIARIOS ============
DAILY_REPORT_ENABLED=true
DAILY_REPORT_TIME=08:00
REPORT_EMAIL=admin@tuempresa.com

# ============ DASHBOARD V2 ============
DASHBOARD_ENABLED=true
REALTIME_UPDATES=true
DASHBOARD_URL=http://localhost:3001

# ============ LOGGING ============
LOG_LEVEL=info
LOG_MAX_FILES=30d

# ============ SINCRONIZACIÓN ============
AUTO_SYNC_ENABLED=true
SYNC_INTERVAL_MINUTES=10
SYNC_BATCH_SIZE=100

# ============ TIMEZONE ============
TZ=America/Asuncion

# ===================================================================
# NOTAS DE CONFIGURACIÓN:
#
# 1. Copia este archivo a .env y configura tus credenciales
# 2. Configura ERP_ENDPOINT con la URL de tu API ERP
# 3. Asegúrate de que MySQL sea accesible desde tu servidor
# 4. Para WhatsApp: escanea QR en el primer inicio
# 5. Los reportes diarios se envían a las 08:00 por defecto
# 6. El dashboard estará en http://localhost:3001
#
# IMPORTANTE:
# - Los productos se obtienen de la API ERP, no de una base de datos
# - El endpoint debe terminar con "/" (ej: .../ecommerce/)
# - Los timeouts MySQL están configurados para conexiones lentas (60s)
# ===================================================================
