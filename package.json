{
  "name": "sync-erp-woocommerce",
  "version": "2.0.0",
  "description": "Sincronizador bidireccional ERP â†” WooCommerce con dashboard de monitoreo, notificaciones WhatsApp y cron job automÃ¡tico",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "logs": "tail -f logs/$(date +%Y-%m-%d).log",
    "logs:errors": "tail -f logs/errors/$(date +%Y-%m-%d)-errors.log",
    "status": "curl -s http://localhost:3001/health",
    "dashboard": "open http://localhost:3001",
    "clean": "rm -rf logs/* backups/* tmp/* data/*.db node_modules/.cache",
    "clean:db": "rm -rf data/sync_queue.db",
    "reset": "npm run clean && npm install",
    "update": "npm update && npm audit fix",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop farmatotal-sync",
    "pm2:restart": "pm2 restart farmatotal-sync",
    "pm2:reload": "pm2 reload farmatotal-sync",
    "pm2:logs": "pm2 logs farmatotal-sync",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "pm2:delete": "pm2 delete farmatotal-sync",
    "pm2:save": "pm2 save",
    "install:windows": "node scripts/install-service-windows.js",
    "uninstall:windows": "node scripts/uninstall-service-windows.js",
    "install:linux": "sudo bash scripts/install-service-linux.sh",
    "uninstall:linux": "sudo bash scripts/uninstall-service-linux.sh",
    "verify": "bash scripts/verify-production.sh",
    "backup": "bash scripts/backup-production.sh",
    "restore": "bash scripts/restore-production.sh",
    "postinstall": "node -e \"console.log('\\nâœ… InstalaciÃ³n completada\\nðŸ“ Configura .env (copia de .env.example)\\nðŸš€ Luego ejecuta: npm start\\nðŸ“Š Dashboard: http://localhost:3001\\n')\"",
    "prestart": "node -e \"const fs = require('fs'); if (!fs.existsSync('.env')) { console.log('\\nâš ï¸  Archivo .env no encontrado'); console.log('ðŸ“ Copia .env.example a .env y configura tus credenciales\\n'); process.exit(1); }\"",
    "prepare": "node -e \"['logs','logs/errors','backups','tmp','data','reports','reports/csv','reports/daily'].forEach(d => require('fs').existsSync(d) || require('fs').mkdirSync(d, {recursive: true}))\""
  },
  "keywords": [
    "woocommerce",
    "erp",
    "synchronization",
    "ecommerce",
    "mysql",
    "dashboard",
    "cron",
    "automation",
    "farmatotal",
    "pharmacy",
    "whatsapp",
    "notifications",
    "baileys"
  ],
  "author": {
    "name": "Tu Empresa",
    "email": "dev@tuempresa.com",
    "url": "https://tuempresa.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tu-usuario/sync-erp-woocommerce.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/sync-erp-woocommerce/issues"
  },
  "homepage": "https://github.com/tu-usuario/sync-erp-woocommerce#readme",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^6.7.18",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.2.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lockfile": "^1.0.4",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "mysql": "^2.18.1",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "sharp": "^0.32.6",
    "socket.io": "^4.6.1",
    "twilio": "^4.20.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "optionalDependencies": {
    "node-windows": "^1.0.0-beta.8",
    "pm2": "^5.3.0",
    "pm2-windows-service": "^0.2.4",
    "pm2-windows-startup": "^1.0.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "files": [
    "server.js",
    "src/",
    "public/",
    "scripts/",
    "plugin/",
    "ecosystem.config.js",
    ".env.example",
    "README.md",
    "QUICKSTART.md",
    "IMPORTANTE-LEER.md"
  ],
  "config": {
    "port": "3001",
    "logLevel": "INFO",
    "syncInterval": "10"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/tu-usuario"
  },
  "directories": {
    "lib": "./src"
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "src/"
    ],
    "ignore": [
      "logs/",
      "backups/",
      "tmp/",
      "data/",
      "reports/",
      "node_modules/"
    ],
    "ext": "js,json"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2022
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
